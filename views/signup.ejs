<!-- signup.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/styles/signup_style.css"> 
</head>
<body>
  <h1>Sign Up</h1>
  <div class="signup-options">
    <label>
      <input type="radio" name="signup-option" value="organizer" checked>
      Sign Up as Organizer
    </label>
    <label>
      <input type="radio" name="signup-option" value="participant">
      Sign Up as Participant
    </label>
  </div>

  <div id="organizer-form" class="signup-form">
    <h2>Organizer Sign Up</h2>
    <form action="/signup/organizer" method="POST">
      <label for="eventName">Event Name:</label>
      <input type="text" id="eventName" name="eventName" required>
      <label for="organizerName">Organizer Name:</label>
      <input type="text" id="organizerName" name="organizerName" required>
      <label for="organizerEmail">Organizer Email:</label>
      <input type="email" id="organizerEmail" name="organizerEmail" required>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
      <button type="submit">Sign Up</button>
    </form>
    
  </div>

  <!-- Participant Sign Up Form -->
  <div id="participant-form" class="signup-form" style="display: none;">
    <h2>Participant Sign Up</h2>
    <form action="/signup/participant" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
      <button type="submit">Sign Up</button>
    </form>
  </div>

  <script>
    // Add event listener to radio buttons to toggle between organizer and participant forms
    document.querySelectorAll('input[name="signup-option"]').forEach(function(radio) {
      radio.addEventListener('change', function() {
        document.getElementById('organizer-form').style.display = (this.value === 'organizer') ? 'block' : 'none';
        document.getElementById('participant-form').style.display = (this.value === 'participant') ? 'block' : 'none';
      });
    });
  </script>
</body>
</html>
