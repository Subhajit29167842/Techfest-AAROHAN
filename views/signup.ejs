<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/styles/signup_style.css"> 
</head>
<body>
  <h1>Sign Up</h1>
  <div class="signup-options">
    <label>
      <input type="radio" name="signup-option" value="organizer" checked>
      Sign Up as Organizer
    </label>
    <label>
      <input type="radio" name="signup-option" value="participant">
      Sign Up as Participant
    </label>
  </div>

  <div id="organizer-form" class="signup-form">
    <h2>Create a New Team</h2>
    <form action="/signup/organizer" method="POST">
      <label for="teamName">Team Name:</label>
      <input type="text" id="teamName" name="teamName" required>
      <label for="email">Organizer Email:</label>
      <input type="email" id="email" name="email" required>
      <label for="headFname">Head First Name:</label>
      <input type="text" id="headFname" name="headFname" required>
      <label for="headLname">Head Last Name:</label>
      <input type="text" id="headLname" name="headLname" required>
      <label for="headRollNumber">Head Roll Number:</label>
      <input type="text" id="headRollNumber" name="headRollNumber" required>
      <label for="headPhoneNumber">Head Phone Number:</label>
      <input type="text" id="headPhoneNumber" name="headPhoneNumber" required>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
      <button type="submit">Sign Up</button>
    </form>
    
  </div>

  <div id="participant-form" class="signup-form" style="display: none;">
    <h1>Participant Sign Up</h1>
  <form action="/signup/participant" method="POST">
    <label for="fname">First Name:</label>
    <input type="text" id="fname" name="fname" required><br>

    <label for="lname">Last Name:</label>
    <input type="text" id="lname" name="lname" required><br>

    <label for="email">Participant Email:</label>
    <input type="email" id="email" name="email" required>

    <label for="college_name">College Name:</label>
    <input type="text" id="college_name" name="college_name" required><br>

    <label for="rollNumber">Roll Number:</label>
    <input type="text" id="rollNumber" name="rollNumber" required><br>

    <label for="gender">Gender:</label>
    <select id="gender" name="gender" required>
      <option value="M">Male</option>
      <option value="F">Female</option>
      <option value="O">Other</option>
    </select><br>

    <label for="participantType">Participant Type:</label>
    <select id="participantType" name="participantType" onchange="showFields()" required>
      <option value="" disabled selected>Select Participant Type</option>
      <option value="inHouse">In-House Participant</option>
      <option value="outside">Outside Participant</option>
    </select><br>

    <div id="inHouseFields" style="display: none;">
      <label for="hallNo">Hall Number:</label>
      <input type="text" id="hallNo" name="hallNo"><br>
    </div>

    <div id="outsideFields" style="display: none;">
      <label for="city">City:</label>
      <input type="text" id="city" name="city"><br>

      <label for="state">State:</label>
      <input type="text" id="state" name="state"><br>

      <br>
    </div>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
    <button type="submit">Sign Up</button>
  </form>

  <script>
    function showFields() {
      const inHouseFields = document.getElementById('inHouseFields');
      const outsideFields = document.getElementById('outsideFields');
      const participantType = document.getElementById('participantType');
      if (participantType.value === 'inHouse') {
        inHouseFields.style.display = 'block';
        outsideFields.style.display = 'none';
      } else if(participantType.value === 'outside') {
        inHouseFields.style.display = 'none';
        outsideFields.style.display = 'block';
      }
      else{
        inHouseFields.style.display = 'none';
        outsideFields.style.display = 'none';
      }
    }
  </script>
  </div>

  <script>
    document.querySelectorAll('input[name="signup-option"]').forEach(function(radio) {
      radio.addEventListener('change', function() {
        document.getElementById('organizer-form').style.display = (this.value === 'organizer') ? 'block' : 'none';
        document.getElementById('participant-form').style.display = (this.value === 'participant') ? 'block' : 'none';
      });
    });
  </script>
</body>
</html>
